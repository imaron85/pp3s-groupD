{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "shared-types": ["../../packages/shared-types/dist"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
